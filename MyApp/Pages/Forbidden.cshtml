@page
@{
    Layout = "";
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forbidden</title>
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
@await Html.PartialAsync("Header")

<div class="">
    <main role="main" class="h-screen px-4 text-black bg-white text-center flex flex-col items-center justify-center">
        <div class="-mt-48">
            <h1 class="inline-block border-gray-300 border-r m-0 mr-5 py-2 pr-4 text-2xl font-medium align-top">403</h1>
            <div class="inline-block text-left h-8 align-middle">
                <h2 class="text-sm leading-10 font-normal m-0 p-0">You do not have access to this page.</h2>
            </div>
            @if (!string.IsNullOrEmpty(Html.Query("role")))
            {
                <p class="text-sm leading-10 font-normal m-0 p-0">
                    Required Role <b>@Html.Query("role")</b>
                </p>
            }
            @if (!string.IsNullOrEmpty(Html.Query("permission")))
            {
                <p class="text-sm leading-10 font-normal m-0 p-0">
                    Required Permission <b>@Html.Query("permission")</b>
                </p>
            }
        </div>
    </main>
</div>

@await Html.PartialAsync("Footer")

</body>
</html>