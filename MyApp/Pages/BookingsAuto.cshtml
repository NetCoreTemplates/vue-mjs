@page "/bookings-auto"
@{
    if (!await Html.EnsureRoleAsync("Employee")) return;
    ViewData["Title"] = "Bookings AutoQueryGrid";
}

<div class="mt-3 mx-auto max-w-fit">
    <h2 class="mb-8 py-2 text-center text-3xl font-bold text-gray-900 dark:text-gray-100 sm:text-4xl">
      @ViewData["Title"]
    </h2>

    <div id="bookings"></div>
</div>

<script type="module">
import { mount } from "/mjs/app.mjs"
const Bookings = {
    template:/*html*/`
        <AutoQueryGrid type="Booking" selected-columns="id,name,cost,bookingStartDate,bookingEndDate,createdBy" />
        <div class="mt-5 flex">
            <SrcLink href="https://github.com/NetCoreTemplates/vue-mjs/blob/main/MyApp.ServiceModel/Bookings.cs" />
            <SrcLink href="https://github.com/NetCoreTemplates/vue-mjs/blob/main/MyApp/Pages/BookingsAuto.cshtml" />
        </div>`
}
mount("#bookings", Bookings)
</script>
